<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>de.cismet</groupId>
        <artifactId>cismet-parent</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <groupId>de.cismet.cids</groupId>
    <artifactId>cids-maven-plugin</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>maven-plugin</packaging>

    <name>cids maven2 plugin</name>
    <description>Simple maven2 plugin that helps with several cids related maven actions</description>

    <scm>
        <connection>scm:svn:svn+ssh://repositories/svn/repositories/central/de/cismet/cids/cids-maven-plugin/trunk</connection>
        <developerConnection>scm:svn:svn+ssh://repositories/svn/repositories/central/de/cismet/cids/cids-maven-plugin/trunk</developerConnection>
        <url>http://repositories:8082/central/browse/de/cismet/cids/cids-maven-plugin/trunk</url>
    </scm>
    <distributionManagement>
        <repository>
            <id>cismet-eig-repo</id>
            <name>cismet-libs-releases-local</name>
            <url>http://repositories:8081/artifactory/plugins-releases-local</url>
        </repository>
        <snapshotRepository>
            <id>cismet-eig-repo</id>
            <name>cismet-libs-snapshots-local</name>
            <url>http://repositories:8081/artifactory/plugins-snapshots-local</url>
        </snapshotRepository>
    </distributionManagement>

    <dependencies>
        <dependency>
            <groupId>org.apache.maven</groupId>
            <artifactId>maven-plugin-api</artifactId>
            <version>2.2.1</version>
        </dependency>
        <dependency>
            <groupId>org.apache.maven</groupId>
            <artifactId>maven-project</artifactId>
            <version>2.2.1</version>
        </dependency>
    </dependencies>
</project>

